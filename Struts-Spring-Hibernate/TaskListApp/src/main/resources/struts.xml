<?xml version="1.0" encoding="UTF-8"?> 

<!DOCTYPE struts PUBLIC 

    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN" 

    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<package name = "task-list-app" extends="struts-default">
		
		<action name="test" class="com.techlabs.actions.TestAction" method = "execute">
			<result name="success">test.jsp</result>  
		</action>
		
		<action name="register.do" class="com.techlabs.actions.RegisterAction" method = "registerDo"> 
			<result name="input">register.jsp</result> 
			<result name="success">home.jsp</result>
		</action>
		
		<action name="register" class="com.techlabs.actions.RegisterAction" method = "execute"> 
			<result name="input">register.jsp</result> 
		 	<result name="success">register.jsp</result>
		</action>
		
		<action name="login" class="com.techlabs.actions.LoginAction" method = "execute">  
			<result name="success">login.jsp</result>  
			<result name="input">login.jsp</result> 
		</action>
		
		<action name="login.do" class="com.techlabs.actions.LoginAction" method = "loginDo">  
			<result name="success" type="redirectAction">${nextAction}</result>  
			<result name="input">login.jsp</result> 
		</action>
		
		<action name="taskList" class="com.techlabs.actions.DisplayTaskAction" method = "execute">
			<result name="success">taskList.jsp</result>  
		</action>
		
		<action name="addTask" class="com.techlabs.actions.AddTaskAction" method = "execute"> 
			<result name="input" type="redirect">/taskList</result> 
		 	<result name="success" type="redirect">/taskList</result>
		</action>
		
		<action name="updateTask.do" class="com.techlabs.actions.UpdateTaskAction" method = "updateTaskDo"> 
			<result name="success" type="redirect">/taskList</result>
			<result name="input" type="redirect">/taskList</result>
		</action>
		
		<action name="updateTask" class="com.techlabs.actions.UpdateTaskAction" method = "execute"> 
			<result name="input">taskList.jsp</result>
		</action>
		
		<action name="deleteTask" class="com.techlabs.actions.DeleteTaskAction" method = "execute"> 
			<result name="success" type="redirect">/taskList</result>
		</action>
		
		<action name="taskDone" class="com.techlabs.actions.TaskDoneAction" method = "execute"> 
			<result name="success" type="redirect">/taskList</result>
		</action>
		
		<action name="subTaskList" class="com.techlabs.actions.DisplaySubTaskAction" method = "execute">
			<result name="success">subTaskList.jsp</result>  
		</action>
		
		<action name="addSubTask" class="com.techlabs.actions.AddSubTaskAction" method = "execute"> 
			<result name="input" type="redirect">/subTaskList</result> 
		 	<result name="success" type="redirect">/subTaskList</result>
		</action>
		
		<action name="updateSubTask.do" class="com.techlabs.actions.UpdateSubTaskAction" method = "updateSubTaskDo"> 
			<result name="success" type="redirect">/subTaskList</result>
			<result name="input" type="redirect">/subTaskList</result>
		</action>
		
		<action name="updateSubTask" class="com.techlabs.actions.UpdateSubTaskAction" method = "execute"> 
			<result name="input">subTaskList.jsp</result>
		</action>
			
		<action name="deleteSubTask" class="com.techlabs.actions.DeleteSubTaskAction" method = "execute"> 
			<result name="success" type="redirect">/subTaskList</result>
		</action>
		
		<action name="userList" class="com.techlabs.actions.DisplayUserAction" method = "execute">
			<result name="success">userList.jsp</result>  
		</action>
	</package>
</struts> 