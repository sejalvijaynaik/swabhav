<?xml version="1.0" encoding="UTF-8"?> 

<!DOCTYPE struts PUBLIC 

    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN" 

    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<package name = "studentCRUD" extends="struts-default">
		<action name="studentList" class="com.techlabs.actions.DisplayStudentAction" method = "execute">  
			<result name="success">student-list.jsp</result>  
		</action>
		<action name="addForm" class="com.techlabs.actions.AddStudentAction" method = "showAddForm">  
			<result name="input">add-student.jsp</result>  
		</action>
		<action name="addStudent" class="com.techlabs.actions.AddStudentAction" method = "execute">  
			<result name="success" type="chain">studentList</result>  
		</action>
		<action name="updateForm" class="com.techlabs.actions.UpdateStudentAction" method = "showUpdateForm">  
			<result name="input">update-student.jsp</result>  
		</action>
		<action name="updateStudent" class="com.techlabs.actions.UpdateStudentAction" method = "execute">  
			<result name="success" type="chain">studentList</result>  
		</action>
		<action name="delete" class="com.techlabs.actions.DeleteStudentAction" method = "execute">  
			<result name="success" type="chain">studentList</result>  
		</action>
	</package>
</struts> 